<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controlsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sensor Status Panel -->
    <LinearLayout
        android:id="@+id/sensorStatusPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <!-- GSR Status -->
        <TextView
            android:id="@+id/gsrStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gsr_value"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <!-- Heart Rate (if available) -->
        <TextView
            android:id="@+id/heartRateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heart_rate"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Camera Type Indicator -->
        <TextView
            android:id="@+id/cameraTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rgb_camera"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Recording Status -->
        <TextView
            android:id="@+id/recordingStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_ready"
            android:textColor="@color/colorSuccess"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Controls Layout -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Camera Switch Button -->
        <Button
            android:id="@+id/cameraSwitchButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/switch_camera"
            android:layout_marginEnd="8dp" />

        <!-- Record Button -->
        <Button
            android:id="@+id/recordButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start_recording"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>